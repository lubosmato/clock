{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "clock2",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "window": {
        "all": false,
        "setIgnoreCursorEvents": true
      },
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "cz.lubosmatejcik.clock",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "maximizable": false,
        "minimizable": false,
        "decorations": false,
        "fullscreen": false,
        "resizable": false,
        "transparent": true,
        "alwaysOnTop": true,
        "fileDropEnabled": false,
        "focus": false,
        "title": "Clock",
        "width": 200,
        "height": 80
      }
    ]
  }
}
